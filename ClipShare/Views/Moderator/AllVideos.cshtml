@model IEnumerable<ClipShare.ViewModels.Moderator.VideoDisplayGrid_vm>

<div class="card border-primary my-3">
    <div class="card-header">All Videos (@Model.Count())</div>
    <div class="card-body">
        <div class="table-wrapper">
            <table class="table table-striped" style="width: 100%">
                <thead>
                    <tr>
                        <th>Title</th>
                        <th>Channel</th>
                        <th>Category</th>
                        <th>Created At</th>
                        <th class="text-center">Delete</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td class="d-flex flex-column">
                                <a asp-controller="Video" asp-action="Watch" asp-route-id="@item.Id" class="text-dark">
                                    @item.Title
                                </a>
                                <img src="@item.ThumbnailUrl" class="card-img-top rounded preview-image" />
                            </td>
                            <td>
                                <a asp-controller="Member" asp-action="Channel" asp-route-id="@item.ChannelId" class="text-dark">
                                    @item.ChannelName
                                </a>
                            </td>
                            <td>@item.CategoryName</td>
                            <td>@item.CreatedAt.ToLongDateString()</td>
                            <td class="text-center">
                                <form method="post">
                                    <button asp-action="DeleteVideo" asp-route-id="@item.Id" type="submit" class="btn btn-danger btn-sm">
                                        Delete
                                    </button>
                                </form>
                            </td>
                        </tr>
                    }

                    @if (Model.Count() == 0)
                    {
                        <tr>
                            <td colspan="5" class="text-center">No Videos</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
